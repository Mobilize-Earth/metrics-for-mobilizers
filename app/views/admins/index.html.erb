<div class="default-background">
  <% if can? :access, :admins_index_url %>
    <div class="admin-page container">
      <div class="row">
        <div class="col-3">
          <div class="left-nav">
            <h2>Navigation</h2>
            <a class="left-nav-item" id="users-nav-link" onclick="showUsers()">
              <div class="left-nav-icon extra-padding"><span class="fa fa-user"></span></div>
              <div class="left-nav-text">User</div>
            </a>
            <a class="left-nav-item" id="chapters-nav-link" onclick="showChapters()">
              <div class="left-nav-icon"><span class="fa fa-users"></span></div>
              <div class="left-nav-text">Chapter</div>
            </a>
          </div>
        </div>
        <div class="col-9">
          <div class="content">
            <div class="content-top-row">
              <a href="<%= new_chapter_path %>"><span class="fa fa-plus-square-o"></span></a>
            </div>
            <div class="content-container container">
              <div id="content-chapters">
                <div class="content-header row">
                  <div class="column col-4">Name</div>
                  <div class="column col-4">Affiliations</div>
                  <div class="column col-3">Created</div>
                  <div class="column col-1"></div>
                </div>

                <% @chapters.each do |chapter| %>
                  <div class="content-row row">
                    <div class="column col-4"><%= chapter.name %></div>
                    <div class="column col-4">what_is_this</div>
                    <div class="column col-3"><%= chapter.created_at.strftime("%m/%d/%Y") %></div>
                    <div class="column col-1">Edit</div>
                  </div>
                <% end %>
              </div>

              <div id="content-users">
                <div class="content-header row">
                  <div class="column col-4">Name</div>
                  <div class="column col-4">Chapter</div>
                  <div class="column col-3">Created</div>
                  <div class="column col-1"></div>
                </div>

                <% @users.each do |user| %>
                  <div class="content-row row">
                    <div class="column col-4"><%= user.email %></div>
                    <div class="column col-4">no_link_yet</div>
                    <div class="column col-3"><%= user.created_at.strftime("%m/%d/%Y") %></div>
                    <div class="column col-1">Edit</div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    </div>
    <div class="admin-title">
      <%= link_to "See All Chapters", chapters_path %>
    </div>
  <% end %>
  <%= image_tag('/images/half_circle.png', class: 'half-logo')%>
</div>

<script>
  let showUsers;
  let showChapters;

  window.addEventListener('load', () => {
    showUsers = () => {
      document.getElementById('content-users').style.display = 'block';
      document.getElementById('content-chapters').style.display = 'none';
    };

    showChapters = () => {
      document.getElementById('content-users').style.display = 'none';
      document.getElementById('content-chapters').style.display = 'block';
    };
  });
</script>
