<div class="container-fluid default-background">
  <% if can? :access, :dashboard_index_url %>
    <div class="row">
      <div class="col-11 offset-1 col-sm-8 offset-sm-3 col-md-8 offset-md-3 col-lg-8 form-title">
        'Dashboard'
      </div>
    </div>
    <div class="row form-row">
      <%= link_to forms_index_path, :action => 'go', :class => "col-9 col-sm-4 col-md-3 form-tile" do %>
          <p class="tile-title">Reporting</p>
          <p class="tile-desc">Fill out my form</p>
      <% end %>
      <%= link_to forms_index_path, :action => 'go', :class => "col-9 col-sm-4 col-md-3 form-tile" do %>
        <p class="tile-title">Check out the<br/>Movement</p>
        <p class="tile-desc">View the data output from our forms</p>
      <% end %>
    </div>
  <% end %>
  <%= image_tag('/images/half_circle.png', class: 'half-logo')%>
</div>
