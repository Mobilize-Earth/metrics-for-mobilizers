<%= form_for @training do |f| %>
  <h2 id="form-title">&nbsp;</h2>
  <%= hidden_field_tag :training_type, "", id: "training-type-input" %>
  <%= hidden_field_tag :report_date %>
  <div class="form-group">
    <div>
      <%= f.label :number_attendees, "Number of Attendees*", class: "action-form-label" %>
      <%= f.text_field :number_attendees, class: "form-control action-form-input clearable", placeholder: 'Enter Number'%>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= link_to 'Cancel', trainings_path, class: "btn cancel-button"%>
      <%= f.submit "Submit Section", class: "btn submit-button"%>
    </div>
    <p class="warning">Cannot undo this action</p>
  </div>
<% end %>
<script>
    var localTime = new Date();
    $('#report_date').val(localTime)
</script>
