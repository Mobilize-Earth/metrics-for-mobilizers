<% if resource.errors.full_messages.present? %>
    <div class="row">
        <div class="col-md-4 offset-md-4 alert alert-danger alert-dismissable fade show" role="alert">
            <% resource.errors.full_messages.each do |error | %>
                <div>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                <%= error %>
                </div>
            <% end %>
        </div>
    </div>
<% end %>