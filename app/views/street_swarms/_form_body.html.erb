<%= form_for @street_swarm do |f| %>
  <%= hidden_field_tag :street_swarm_type, "", id: "street-type-input" %>
  <%= hidden_field_tag :report_date, "", id: "swarm-report-date" %>
  <div class="form-group">
    <div>
      <%= f.label :mobilizers_attended, "Number of Participants*", class: "action-form-label" %>
      <%= f.text_field :mobilizers_attended, class: "form-control action-form-input clearable", placeholder: 'Enter Number'%>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= f.label :identifier, "Identifier (max 50 characters)", class: "action-form-label" %>
      <%= f.text_field :identifier, class: "form-control clearable", placeholder: 'Enter Identifier', :maxlength => 50%>
    </div>
  </div>
  <div class="form-group">
    <div>
      <%= link_to 'Cancel', arrestable_actions_path, class: "btn cancel-button"%>
      <%= f.submit "Submit Section", class: "btn submit-button"%>
    </div>
    <p class="warning">Cannot undo this action</p>
  </div>
<% end %>

<script>
    var localTime = new Date();
    $('#swarm-report-date').val(localTime)
</script>
