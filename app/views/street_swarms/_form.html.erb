<div class="container-fluid">
  <% if flash[:errors] %>
  <div class="row">
    <div class="col-md-4 offset-md-4 alert alert-danger alert-dismissable fade show" role="alert">
      <% flash[:errors].each do |error | %>
        <li><%= error %></li>
      <% end %>
    </div>
  </div>
  <% end %>

  <% if flash[:success] %>
  <div class="row">
      <div class="col-md-4 offset-md-4 alert alert-danger alert-dismissable fade show" role="success">
        <li><%= flash[:success] %></li>
      </div>
  </div>
  <% end %>


  <div class="report-form-body">
    <%= form_for @street_swarm do |f| %>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.label :xr_members_attended, "# of Participants" %>
        <%= f.text_field :xr_members_attended, class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.submit "Submit Section", class: 'col-md-6 btn btn-success btn-block'%>
      </div>
    </div>
    <% end %>
  </div>
</div>
