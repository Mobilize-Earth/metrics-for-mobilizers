<div class="default-background">
  <%= render 'layouts/messages', flash: flash %>
  <%= render 'forms/form_header', title: 'Actions', subtitle: 'Click the tab below to complete your form. Repeat if you did more than one Action.' %>
  <%= render "forms/form", arrestable_action: @arrestable_action, street_swarm: @street_swarm, social_media_blitzing: @social_media_blitzing do |f| %>
    <div class="report-form-body" id="arrestable-form-body">
      <%= render 'arrestable_actions/form_body' %>
    </div>
    <div class="report-form-body" id="swarm-form-body">
      <%= render 'street_swarms/form_body' %>
    </div>
    <div class="report-form-body" id="blitz-form-body">
      <%= render 'social_media_blitzings/form_body' %>
    </div>
<% end %>
  <%= render "forms/form_footer", title: 'Arrestable Actions' %>
</div>
